<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../commons/header'); -%>

    <link rel="stylesheet" href="/css/auth/login.css" />
    <title>ChessMaster Community | Login</title>

    <% if (incorrectCredentials) { %>
    <script>
      alert("Incorrect Username or Password, Try again!");
    </script>
    <% } %>
    <!-- <script src="/js/utilities/redirector.js"></script> -->
  </head>

  <body>
    <div class="login">
      <img src="/images/authlogo.jpeg" alt="authlogo" />
      <form action="/login" method="post">
        <div class="inputs">
          <input
            type="text"
            class="form-control"
            aria-label="Username"
            aria-describedby="addon-wrapping"
            name="username"
            id="username"
            placeholder="Username"
          />
          <input
            type="password"
            class="form-control"
            aria-label="Password"
            aria-describedby="addon-wrapping"
            name="password"
            id="password"
            required
            placeholder="Password"
          />
          <div class="login-button mt-4">
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
          <p class="alternate" style="margin-bottom: 7px">
            Forgot Password? <a href="/forgot-password">Click to recover</a>
          </p>
          <p class="alternate">
            Don't have an account? <a href="/signup">Sign Up here</a>
          </p>
        </div>
      </form>
    </div>
  </body>
</html>
